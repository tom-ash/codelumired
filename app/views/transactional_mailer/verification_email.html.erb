<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style type="text/css" media="screen">
      body {
        background: #D0D3D4;
        font-family: Helvetica, Arial, sans-serif;
        font-size: 16px;
        color: rgb(64, 64, 64);
        padding: 50px 0;
      }
      .hello {
        margin-bottom: 18px;
      }
      .verification-code-message {
        margin-bottom: 18px;
      }
      .container {
        background: white;
        max-width: 400px;
        margin: 0 auto;
        border-radius: 5px;
        padding: 24px;
      }
      img {
        display: block;
        width: 120px;
        margin: 0 auto;
        margin-bottom: 24px;
      }
      .verification-code {
        color: #D35400;
        text-align: center;
        font-size: 36px;
        margin-bottom: 18px;
      }
      .regards {
        margin-bottom: 6px;
      }
      .signature {
        font-style: italic;
        font-size: 14px;
      }
      .company {
        margin-top: 24px;
        font-size: 8px;
        text-align: justify;
        line-height: 1.5;
        color: #909497;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <img src='https://mapawynajmupl.s3.eu-central-1.amazonaws.com/assets/images/transparentized-logo.png' />
      <div class='hello'>
        <%= @hello %>
      </div>
      <div class='verification-code-message'>
        <%= @verification_code_message  %>
      </div>
      <div class='verification-code'>
        <%= @verification_code %>
      </div>
      <div class='regards'>
        Pozdrawiamy!
      </div>
      <div class='signature'>
        mapawynajmu.pl
      </div>
      <div class='company'>
        <%= @company %>
      </div>
    </div>
  </body>
</html>
